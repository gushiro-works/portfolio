<% provide(:title, "新しい計測") %>
<h1>新しい計測</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:measurement, url: measurements_path) do |f| %>
      <%= f.label :event %>
      <%= f.text_field :event, class: 'form-control' %>

      <%= f.label :unit %>
      <%= f.text_field :unit, class: 'form-control' %>

      <%= f.label :value_type %>
      <%= f.text_field :value_type, class: 'form-control' %>
      
      <%= f.submit "計測を追加", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>