<% provide(:title, "新しい記録") %>
<h1>新しい記録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:record, url: measurement_records_path) do |f| %>
      <%= f.label :record_value %>
      <%= f.number_field :record_value, class: 'form-control' %>
      
      <%= f.submit "記録を追加", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>