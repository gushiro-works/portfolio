<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  
    <%= render 'follow_form' if logged_in? %>
    
    <% if @measurements.any? %>
      <ol class="home-list">
        <%= render @measurements %>
      </ol>
      <%= will_paginate @measurements %>
    <% end %>
  </div>
</div>
